// Poder descargar partes de una tesis que sea una conjunción.
theorem "andi_variant" : a => b => (a & b)
proof
  suppose "a" : a;
  suppose "b" : b;
  thus a by "a";
  thus b by "b";
end

have "A": (a & b)
have      (a & b)
thus a    by "_"   ===  hence a

// Incluir un comando "have" que permita afirmar una
// fórmula que no tiene que ver con la tesis.
// Incluir un comando "hence" que sea como el "thus"
// pero permitiendo usar el anterior.
theorem "ejemplo" : (a -> b -> c) -> (a -> b) -> a -> c
proof
  suppose "P": a -> b -> c;
  suppose "Q": a -> b;
  suppose "R": a;
  have "S": b by "Q", "R";
  hence c     by "P", "R";
end

